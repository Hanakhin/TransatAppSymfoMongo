{% extends 'base.html.twig' %}

{% block title %}Charte des Prix - BeachRelax{% endblock %}

{% block body %}
    <div class="bg-gray-100 py-12">
        <div class="container mx-auto px-4">
            <h1 class="text-3xl font-bold text-center text-gray-800 mb-8">Charte des Prix</h1>

            <div class="bg-white shadow-md rounded-lg overflow-hidden max-w-4xl mx-auto">
                <div class="px-6 py-4 bg-blue-600 text-white">
                    <h2 class="text-xl font-semibold">Tarifs de location des transats</h2>
                </div>
                <div class="p-6">
                    <table class="min-w-full table-auto">
                        <thead>
                        <tr class="bg-gray-200">
                            <th class="px-4 py-2 text-left">Durée</th>
                            <th class="px-4 py-2 text-left">Prix par transat</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td class="border px-4 py-2">1 heure</td>
                            <td class="border px-4 py-2">5 €</td>
                        </tr>
                        <tr class="bg-gray-100">
                            <td class="border px-4 py-2">2 heures</td>
                            <td class="border px-4 py-2">10 €</td>
                        </tr>
                        <tr>
                            <td class="border px-4 py-2">3 heures</td>
                            <td class="border px-4 py-2">15 €</td>
                        </tr>
                        </tbody>
                    </table>

                    <div class="mt-6">
                        <h3 class="text-lg font-semibold mb-2">Informations complémentaires :</h3>
                        <ul class="list-disc list-inside space-y-2 text-gray-700">
                            <li>Les prix sont indiqués par transat.</li>
                            <li>La durée maximale de location est de 3 heures.</li>
                            <li>Les réservations peuvent être effectuées entre 8h00 et 18h00.</li>
                            <li>En cas de réservation de plusieurs transats, le prix est multiplié par le nombre de transats.</li>
                        </ul>
                    </div>

                    <div class="mt-8 text-center">
                        {% if app.user %}
                            <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                Réserver maintenant
                            </button>
                        {% else %}
                            <p>Vous devez vous <a href="{{ path('app_login') }}" class="text-blue-600">Connecter</a> pour demander une reservation</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}