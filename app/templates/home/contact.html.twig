{% extends 'base.html.twig' %}

{% block title %}Contactez-nous - BeachRelax{% endblock %}

{% block body %}
    <div class="bg-gray-100 py-12">
        <div class="container mx-auto px-4">
            <h1 class="text-3xl font-bold text-center text-gray-800 mb-8">Contactez-nous</h1>

            <div class="bg-white shadow-md rounded-lg overflow-hidden max-w-4xl mx-auto">
                <div class="md:flex">
                    <div class="md:w-1/2 p-6">
                        <h2 class="text-xl font-semibold mb-4">Envoyez-nous un message</h2>
                        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
                        <div>
                            {{ form_label(form.nom, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.nom, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50'}}) }}
                        </div>
                        <div>
                            {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.email, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50'}}) }}
                        </div>
                        <div>
                            {{ form_label(form.subject, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.subject, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50'}}) }}
                        </div>
                        <div>
                            {{ form_label(form.message, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.message, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50', 'rows': '4'}}) }}
                        </div>
                        <div>
                            <button type="submit" class="w-full bg-blue-600 text-white font-bold py-2 px-4 rounded hover:bg-blue-700 transition duration-300">Envoyer</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                    <div class="md:w-1/2 bg-blue-600 text-white p-6">
                        <h2 class="text-xl font-semibold mb-4">Nos coordonnées</h2>
                        <div class="space-y-4">
                            <p><i class="fas fa-map-marker-alt mr-2"></i> 123 Rue de la Plage, 06000 Nice</p>
                            <p><i class="fas fa-phone mr-2"></i> +33 4 93 00 00 00</p>
                            <p><i class="fas fa-envelope mr-2"></i> contact@beachrelax.com</p>
                            <p><i class="fas fa-clock mr-2"></i> Ouvert tous les jours de 8h à 18h</p>
                        </div>
                        <div class="mt-6">
                            <h3 class="text-lg font-semibold mb-2">Suivez-nous</h3>
                            <div class="flex space-x-4">
                                <a href="#" class="hover:text-blue-200"><i class="fab fa-facebook-f"></i></a>
                                <a href="#" class="hover:text-blue-200"><i class="fab fa-twitter"></i></a>
                                <a href="#" class="hover:text-blue-200"><i class="fab fa-instagram"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
{% endblock %}